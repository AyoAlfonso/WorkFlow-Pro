{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "es7", "es2017", "dom","esnext"],
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop":true,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/javascript/*", "app/javascript/stores/*","app/javascript/models/*"]
    }
  },
  "include": ["app/javascript", "app/javascript/stores/*","app/javascript/models/*", "stories", "typings",  "**/*.ts",
    "**/*.tsx"],
  "exclude": ["**/*.spec.ts", "node_modules", "vendor", "public"],
  "compileOnSave": false
}
