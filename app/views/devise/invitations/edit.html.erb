<p class="devise-header"><%= t "devise.invitations.edit.header" %></p>

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name, format: :html), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :invitation_token, readonly: true %>

  <% if f.object.class.require_password_on_accepting %>
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
  <% end %>

  <%= f.submit t("devise.invitations.edit.submit_button"), class: "devise-submit"  %>
<% end %>
