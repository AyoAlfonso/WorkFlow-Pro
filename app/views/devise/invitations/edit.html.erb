<p class="devise-header"> Set up your profile</p>

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name, format: :html), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :invitation_token, readonly: true %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>


  <%= f.submit "Update Profile", class: "devise-submit" %>
<% end %>
