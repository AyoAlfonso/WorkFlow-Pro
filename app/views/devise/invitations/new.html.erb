<p class="devise-header"><%= t "devise.invitations.new.header" %></p>

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name, format: :html), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <% resource.class.invite_key_fields.each do |field| -%>
      <%= f.label field %>
      <%= f.text_field field %>
  <% end -%>

  <%= f.submit t("devise.invitations.new.submit_button"), class: "devise-submit" %>
<% end %>
